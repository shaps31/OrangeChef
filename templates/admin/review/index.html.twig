{% extends 'base.html.twig' %}
{% block title %}Mod√©ration des avis{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-3">üõ°Ô∏è Mod√©ration des avis</h1>

        {# Onglets de filtre #}
        <div class="mb-3 d-flex gap-2 flex-wrap">
            <a class="btn btn-sm {{ status == 'pending' ? 'btn-primary' : 'btn-outline-primary' }}"
               href="{{ path('app_admin_reviews', {status:'pending'}) }}">En attente</a>
            <a class="btn btn-sm {{ status == 'approved' ? 'btn-primary' : 'btn-outline-primary' }}"
               href="{{ path('app_admin_reviews', {status:'approved'}) }}">Approuv√©s</a>
            <a class="btn btn-sm {{ status == 'all' ? 'btn-primary' : 'btn-outline-primary' }}"
               href="{{ path('app_admin_reviews', {status:'all'}) }}">Tous</a>
        </div>

        {% if reviews is empty %}
            <div class="alert alert-info">Aucun avis √† afficher.</div>
        {% else %}
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Recette</th>
                        <th>Auteur</th>
                        <th>Note</th>
                        <th>Commentaire</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th style="width:220px">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for r in reviews %}
                        <tr class="{{ r.isApproved ? '' : 'table-warning' }}">
                            <td>{{ r.id }}</td>

                            <td>
                                <a href="{{ path('app_recipe_show', {id: r.recipe.id}) }}" target="_blank">
                                    {{ r.recipe.title ?? ('Recette #' ~ r.recipe.id) }}
                                </a>
                            </td>

                            <td>{{ r.author.prenom ?? r.author.email }}</td>

                            <td>
                                {% for i in 1..5 %}{% if i <= r.rating %}‚≠ê{% else %}‚òÜ{% endif %}{% endfor %}
                                <small class="text-muted">({{ r.rating }}/5)</small>
                            </td>

                            <td>
                                {% if r.comment %}
                                    {{ r.comment|u.truncate(90, '‚Ä¶') }}
                                {% else %}
                                    <span class="text-muted">‚Äî</span>
                                {% endif %}
                            </td>

                            <td>{{ r.createdAt|date('d/m/Y H:i') }}</td>

                            <td>
                                {% if r.isApproved %}
                                    <span class="badge text-bg-success">Approuv√©</span>
                                {% else %}
                                    <span class="badge text-bg-warning">En attente</span>
                                {% endif %}
                            </td>

                            <td>
                                {% if not r.isApproved %}
                                    <form method="post" action="{{ path('app_admin_review_approve', {id: r.id}) }}" style="display:inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('approve_review_' ~ r.id) }}">
                                        <button class="btn btn-sm btn-success">Approuver</button>
                                    </form>
                                {% endif %}

                                <form method="post" action="{{ path('app_admin_review_reject', {id: r.id}) }}"
                                      style="display:inline" onsubmit="return confirm('Supprimer cet avis ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('reject_review_' ~ r.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                                </form>

                                <a href="{{ path('app_review_edit', {id: r.id}) }}" class="btn btn-sm btn-outline-secondary">√âditer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
    {% if total_pages > 1 %}
        <nav class="mt-3">
            <ul class="pagination">
                <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('app_admin_reviews', {status: status, p: page-1}) }}">¬´</a>
                </li>
                {% for i in 1..total_pages %}
                    <li class="page-item {{ i == page ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('app_admin_reviews', {status: status, p: i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {{ page == total_pages ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('app_admin_reviews', {status: status, p: page+1}) }}">¬ª</a>
                </li>
            </ul>
        </nav>
    {% endif %}


    <style>
        .table-warning td, .table-warning th { vertical-align: middle; }
    </style>
{% endblock %}
