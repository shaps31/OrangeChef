{% extends 'base.html.twig' %}

{% block title %}Stock ‚Äî {{ inventory.variety|title }}{% endblock %}

{% block body %}
    <div class="container py-3">

        {# --- Statuts simples (on garde en Twig, lisible pour d√©butant) --- #}
        {% set now = date('now') %}
        {% set hasExp = inventory.expirationDate is not null %}
        {% set soonLimit = date('+3 days') %}
        {% set status = hasExp
            ? (inventory.expirationDate < now ? 'expired' : (inventory.expirationDate < soonLimit ? 'soon' : 'ok'))
            : 'none' %}
        {% set qty = inventory.quantity|default(0) %}
        {% set qtyState = qty <= 0 ? 'out' : (qty <= 3 ? 'low' : 'ok') %}

        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_inventory_index') }}">Inventaire</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ inventory.variety|title }}</li>
            </ol>
        </nav>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between flex-wrap gap-3">
                    <div>
                        <h1 class="h3 mb-1">üì¶ {{ inventory.variety|title }}</h1>

                        <div class="d-flex gap-2 inv-badges">
                            {# Stock #}
                            {% if qtyState == 'out' %}
                                <span class="badge badge-bad">Rupture</span>
                            {% elseif qtyState == 'low' %}
                                <span class="badge badge-warn">Stock faible</span>
                            {% else %}
                                <span class="badge badge-ok">En stock</span>
                            {% endif %}

                            {# P√©remption #}
                            {% if status == 'expired' %}
                                <span class="badge badge-bad">P√©rim√©</span>
                            {% elseif status == 'soon' %}
                                <span class="badge badge-warn">P√©remption imminente</span>
                            {% elseif status == 'ok' %}
                                <span class="badge badge-ok">Frais</span>
                            {% else %}
                                <span class="badge badge-neutral">Sans date</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="text-end">
                        <a class="btn btn-secondary me-2" href="{{ path('app_inventory_index') }}">‚Üê Retour</a>
                        <a class="btn btn-primary" href="{{ path('app_inventory_edit', {id: inventory.id}) }}">‚úèÔ∏è Modifier</a>
                    </div>
                </div>

                <hr class="my-4">

                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="p-3 border rounded-3">
                            <div class="small text-muted">Quantit√©</div>
                            <div class="fs-4 fw-semibold">{{ qty }}</div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="p-3 border rounded-3">
                            <div class="small text-muted">Expiration</div>
                            <div class="fs-5">
                                {% if hasExp %}{{ inventory.expirationDate|date('d/m/Y') }}{% else %}‚Äî{% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="p-3 border rounded-3">
                            <div class="small text-muted">Statut</div>
                            <div class="fs-5">
                                {% if status == 'expired' %}‚õî P√©rim√©
                                {% elseif status == 'soon' %}‚è≥ Bient√¥t p√©rim√©
                                {% elseif status == 'ok' %}üü† OK
                                {% else %}‚Äî{% endif %}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
{% endblock %}
