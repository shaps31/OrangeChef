{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="container py-3">

        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
            <h1 class="h4 m-0">üë• Utilisateurs</h1>

            <div class="d-flex align-items-center gap-2">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-outline-secondary" href="{{ path('app_admin_reviews', {'_locale': app.request.locale}) }}">üõ°Ô∏è Avis</a>
                {% endif %}
                <a href="{{ path('app_user_new', {'_locale': app.request.locale}) }}" class="btn btn-primary btn-recette">
                    ‚ûï Ajouter un utilisateur
                </a>
            </div>
        </div>

        {# Flash messages √©ventuels #}
        {% for type, messages in app.flashes %}
            {% for msg in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ msg }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% set roleLabels = {'ROLE_ADMIN':'Admin', 'ROLE_USER':'Membre'} %}

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Utilisateur</th>
                    <th scope="col">R√¥les</th>
                    <th scope="col">V√©rifi√©</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td class="text-muted">{{ user.id }}</td>

                        <td>
                            <div class="d-flex align-items-center gap-2">
              <span class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center"
                    style="width:36px;height:36px;">
                {% if user.avatar is defined and user.avatar %}
                    <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="" style="width:100%;height:100%;object-fit:cover;border-radius:50%;">
                {% else %}
                    üë§
                {% endif %}
              </span>
                                <div>
                                    <div class="fw-semibold">{{ user.displayName ?? user.email }}</div>
                                    <div class="small text-muted"><a href="mailto:{{ user.email }}">{{ user.email }}</a></div>
                                </div>
                            </div>
                        </td>

                        <td>
                            {% if user.roles is iterable and user.roles|length > 0 %}
                                {% for r in user.roles %}
                                    <span class="badge {{ r == 'ROLE_ADMIN' ? 'bg-danger' : 'bg-secondary' }}">{{ roleLabels[r] ?? r }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucun r√¥le</span>
                            {% endif %}
                        </td>

                        <td>
                            {% if user.isVerified %}
                                <span class="badge bg-success">‚úÖ V√©rifi√©</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">‚ùå Non v√©rifi√©</span>
                            {% endif %}
                        </td>

                        <td class="text-end">
                            <a href="{{ path('app_user_show', {'id': user.id, '_locale': app.request.locale}) }}"
                               class="btn btn-sm btn-outline-secondary" title="Voir">üëÅÔ∏è</a>

                            <a href="{{ path('app_user_edit', {'id': user.id, '_locale': app.request.locale}) }}"
                               class="btn btn-sm btn-outline-primary" title="Modifier">‚úèÔ∏è</a>

                            <form method="post"
                                  action="{{ path('app_user_delete', {'id': user.id, '_locale': app.request.locale}) }}"
                                  style="display:inline"
                                  onsubmit="return confirm('üóëÔ∏è Supprimer cet utilisateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">üóëÔ∏è</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">‚ö†Ô∏è Aucun utilisateur trouv√©.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
