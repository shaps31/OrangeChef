{% extends 'base.html.twig' %}

{% block title %}Dashboard - Orange Chef{% endblock %}

{% block body %}
<div class="container">
    <div class="dashboard-header">
        <h1>üçä Tableau de bord</h1>
        <p>Bienvenue {{ user.displayName }} ! Voici un aper√ßu de votre activit√© Orange Chef.</p>
    </div>

    <!-- Niveau utilisateur -->
    <div class="user-level-card">
        <div class="level-info">
            <div class="level-icon">{{ userLevel.icon }}</div>
            <div class="level-details">
                <h2>{{ userLevel.name }}</h2>
                <p>{{ userLevel.description }}</p>
                {% if userLevel.nextLevel %}
                    <small>Prochain niveau: {{ userLevel.nextLevel }}</small>
                {% endif %}
            </div>
        </div>
        {% if userLevel.nextLevel %}
            <div class="level-progress">
                <div class="progress-bar">
                    <div class="progress-fill" style="width: {{ userLevel.progress }}%"></div>
                </div>
                <span class="progress-text">{{ userLevel.progress }}%</span>
            </div>
        {% endif %}
        <span class="badge {{ userLevel.badge }}">{{ userLevel.icon }} {{ userLevel.name }}</span>
    </div>

    <!-- Statistiques -->

    <!-- Statistiques -->
    <div class="stats-grid">
        <div class="stats-card">
            <div class="stats-number">{{ stats.totalRecipes }}</div>
            <div class="stats-label">Recettes cr√©√©es</div>
            <div class="stats-icon">üìù</div>
        </div>

        <div class="stats-card">
            <div class="stats-number">{{ stats.totalViews }}</div>
            <div class="stats-label">Vues totales</div>
            <div class="stats-icon">üëÅÔ∏è</div>
        </div>

        <div class="stats-card">
            <div class="stats-number">{{ stats.averageRating > 0 ? stats.averageRating : 'N/A' }}</div>
            <div class="stats-label">Note moyenne</div>
            <div class="stats-icon">‚≠ê</div>
        </div>
    </div> {# ‚Üê cette fermeture manquait #}

    <!-- Actions rapides -->
    <div class="quick-actions">
        <h2>üöÄ Actions rapides</h2>
        <div class="actions-grid">
            <a href="{{ path('app_recipe_new') }}" class="action-card">
                <div class="action-icon">‚ûï</div>
                <h3>Nouvelle recette</h3>
                <p>Partagez votre derni√®re cr√©ation</p>
            </a>

            <a href="{{ path('app_my_recipes') }}" class="action-card">
                <div class="action-icon">üìö</div>
                <h3>Mes recettes</h3>
                <p>Consultez vos cr√©ations</p>
            </a>

            <a href="{{ path('app_recipe_index') }}" class="action-card">
                <div class="action-icon">üîç</div>
                <h3>Explorer</h3>
                <p>D√©couvrez de nouvelles recettes</p>
            </a>
        </div>
    </div>
    <div class="dashboard-content">
        <!-- Mes recettes populaires -->
        {% if popularRecipes|length > 0 %}
        <div class="dashboard-section">
            <h2>üèÜ Mes recettes les plus populaires</h2>
            <div class="recipes-mini-grid">
                {% for recipe in popularRecipes %}
                    <div class="recipe-mini-card">
                        <div class="recipe-mini-image">
                            {% if recipe.image %}
                                {% set img = recipe.image %}
                                {% if img starts with 'http' or img starts with 'https' %}
                                    {% set src = img %}
                                {% elseif img starts with 'uploads/' %}
                                    {% set src = asset(img) %}
                                {% elseif img starts with '/uploads/' %}
                                    {% set src = img %}
                                {% else %}
                                    {% set src = asset('uploads/recipes/' ~ img) %}
                                {% endif %}
                                <img loading="lazy" decoding="async" src="{{ src }}" alt="{{ recipe.title }}">
                            {% else %}
                                <img loading="lazy" decoding="async" src="{{ asset('assets/img/orange-2OibIMH.jpg') }}" alt="{{ recipe.title }}">
                            {% endif %}
                        </div>
                        <div class="recipe-mini-content">
                            <h4><a href="{{ path('app_recipe_show', {id: recipe.id}) }}">{{ recipe.title }}</a></h4>
                            <div class="recipe-mini-stats">
                                <span>üëÅÔ∏è {{ recipe.views }}</span>
                                <span>‚≠ê {{ recipe.averageRating > 0 ? recipe.averageRating : 'N/A' }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <!-- Derni√®res recettes de la communaut√© -->
        {% if latestCommunityRecipes|length > 0 %}
        <div class="dashboard-section">
            <h2>üåü Derni√®res recettes de la communaut√©</h2>
            <div class="recipes-mini-grid">
                {% for recipe in latestCommunityRecipes %}
                    <div class="recipe-mini-card">
                        <div class="recipe-mini-image">
                            {% if recipe.image %}
                                {% set img = recipe.image %}
                                {% if img starts with 'http' or img starts with 'https' %}
                                    {% set src = img %}
                                {% elseif img starts with 'uploads/' %}
                                    {% set src = asset(img) %}
                                {% elseif img starts with '/uploads/' %}
                                    {% set src = img %}
                                {% else %}
                                    {% set src = asset('uploads/recipes/' ~ img) %}
                                {% endif %}
                                <img loading="lazy" decoding="async" src="{{ src }}" alt="{{ recipe.title }}">
                            {% else %}
                                <img loading="lazy" decoding="async" src="{{ asset('assets/img/orange-2OibIMH.jpg') }}" alt="{{ recipe.title }}">
                            {% endif %}
                        </div>
                        <div class="recipe-mini-content">
                            <h4><a href="{{ path('app_recipe_show', {id: recipe.id}) }}">{{ recipe.title }}</a></h4>
                            <div class="recipe-mini-meta">
                                <small>Par {{ recipe.author.displayName }}</small>
                                <div class="recipe-mini-stats">
                                    <span>üëÅÔ∏è {{ recipe.views }}</span>
                                    <span>‚≠ê {{ recipe.averageRating > 0 ? recipe.averageRating : 'N/A' }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>

<style>
.dashboard-header {
    text-align: center;
    margin-bottom: 40px;
}

.dashboard-header h1 {
    color: #ff9800;
    font-size: 2.5em;
    margin-bottom: 10px;
}

.user-level-card {
    background: linear-gradient(135deg, #ff9800, #f57c00);
    color: white;
    padding: 30px;
    border-radius: 15px;
    margin-bottom: 30px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 8px 25px rgba(255, 152, 0, 0.3);
    position: relative;
    overflow: hidden;
}

.user-level-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(180deg); }
}

.level-info {
    display: flex;
    align-items: center;
    gap: 20px;
    flex: 1;
}

.level-icon {
    font-size: 3em;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.level-details h2 {
    margin: 0 0 5px 0;
    font-size: 1.8em;
}

.level-details p {
    margin: 0 0 5px 0;
    opacity: 0.9;
}

.level-progress {
    display: flex;
    align-items: center;
    gap: 10px;
    min-width: 150px;
}

.progress-bar {
    flex: 1;
    height: 8px;
    background: rgba(255,255,255,0.3);
    border-radius: 4px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background: white;
    border-radius: 4px;
    transition: width 0.5s ease;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}

.stats-card {
    position: relative;
}

.stats-card .stats-icon {
    position: absolute;
    top: 15px;
    right: 15px;
    font-size: 2em;
    opacity: 0.3;
}

.quick-actions {
    margin-bottom: 40px;
}

.quick-actions h2 {
    color: #ff9800;
    margin-bottom: 20px;
    text-align: center;
}

.actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.action-card {
    background: white;
    padding: 25px;
    border-radius: 12px;
    text-align: center;
    text-decoration: none;
    color: #333;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid transparent;
}

.action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    border-color: #ff9800;
    color: #333;
}

.action-icon {
    font-size: 2.5em;
    margin-bottom: 15px;
}

.action-card h3 {
    color: #ff9800;
    margin: 0 0 10px 0;
    font-size: 1.2em;
}

.action-card p {
    margin: 0;
    color: #666;
    font-size: 0.9em;
}

.dashboard-content {
    display: grid;
    gap: 40px;
}

.dashboard-section h2 {
    color: #ff9800;
    margin-bottom: 20px;
    font-size: 1.5em;
}

.recipes-mini-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
}

.recipe-mini-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
}

.recipe-mini-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
}

.recipe-mini-image {
    height: 120px;
    position: relative;
}

.recipe-mini-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.recipe-mini-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ff9800, #f57c00);
    font-size: 2em;
    color: white;
}

.recipe-mini-content {
    padding: 15px;
}

.recipe-mini-content h4 {
    margin: 0 0 10px 0;
    font-size: 1em;
}

.recipe-mini-content h4 a {
    color: #333;
    text-decoration: none;
}

.recipe-mini-content h4 a:hover {
    color: #ff9800;
}

.recipe-mini-stats {
    display: flex;
    gap: 15px;
    font-size: 0.85em;
    color: #666;
}

.recipe-mini-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85em;
}

.recipe-mini-meta small {
    color: #999;
}

@media (max-width: 768px) {
    .user-level-card {
        flex-direction: column;
        text-align: center;
        gap: 20px;
    }

    .level-progress {
        width: 100%;
    }

    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .actions-grid {
        grid-template-columns: 1fr;
    }

    .recipes-mini-grid {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}
