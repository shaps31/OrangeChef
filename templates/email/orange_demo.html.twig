{% extends 'email/_layout.html.twig' %}
{% set subject = subject|default('🍊 OrangeChef • Démo personnalisée') %}

{% block content %}
    <h2 style="margin:0 0 12px;">🍊 Bonjour {{ userName|default('ami·e d’OrangeChef') }}</h2>
    <p>Voici un e-mail personnalisé avec vos données :</p>
    <ul>
        <li><strong>abc :</strong> {{ abc|default('—') }}</li>
        <li><strong>paramètre :</strong> {{ parametre|default('—') }}</li>
    </ul>
    {% if ctaUrl %}
        <p style="margin-top:18px;">
            <a href="{{ ctaUrl }}" style="display:inline-block;padding:10px 16px;border-radius:8px;background:#ff7a00;color:#fff;text-decoration:none;">
                Voir la page
            </a>
        </p>
    {% endif %}
{% endblock %}
